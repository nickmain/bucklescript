{
  "devDependencies": {
    "benchmark": "^2.1.0",
    "colors": "^1.1.2",
    "coveralls": "^2.11.9",
    "diff": "^2.2.2",
    "glob": "^7.0.3",
    "istanbul": "^0.4.2",
    "jasmine-core": "^2.4.1",
    "karma": "^1.1.2",
    "karma-jasmine-html-reporter": "^0.2.1",
    "mocha": "^2.3.4",
