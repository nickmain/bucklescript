    "ocaml": "./bin/ocaml",
    "ocamlc": "./bin/ocamlc",
    "ocamlc.opt": "./bin/ocamlc.opt",
    "ocamldep": "./bin/ocamldep.opt",
    "ocamllex": "./bin/ocamllex.opt",
    "ocamlobjinfo": "./bin/ocamlobjinfo",
    "ocamlopt.opt": "./bin/ocamlopt",
    "ocamlrun": "./bin/ocamlrun",
    "ocamlyacc": "./bin/ocamlyacc"
